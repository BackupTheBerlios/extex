<?xml version="1.0" encoding="ISO-8859-1"?>

<UserInput>
  <panel order="0">
    <field type="text" variable="TEXMF">
      <description/>
      <spec txt="Enter some text:" id="text.label" size="15"
      set="$TEXMF"/>
    </field>
    <field type="search" variable="TEXMF">
      <description align="left"
        txt="This is a description for a search input field."
        id="description.texmf"/>
      <spec txt="Path to Java SDK:" checkfilename="lib/tools.jar"
        type="file" result="directory">
        <choice value="/usr/lib/tex/" os="unix" />
        <choice value="/usr/local/lib/tex/" os="unix" />
        <choice value="/opt/tex" os="unix" />
        <choice value="C:\Program Files\TeXlive" os="windows" />
        <choice value="C:\Program Files\TeX" os="windows" />
        <choice value="C:\TeX" os="windows" />
      </spec>
    </field>
  </panel>
</UserInput>
